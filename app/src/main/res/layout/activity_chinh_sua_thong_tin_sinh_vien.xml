<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nen_header1"
    tools:context=".ChinhSuaThongTinSinhVien">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@drawable/avatar"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/screen_background"
        android:orientation="vertical">

        <!-- FAMILY NAME & FIRSTNAME -->
        <LinearLayout
            style="@style/classroom_individual_linearlayout_style"
            android:orientation="horizontal">

            <!-- FAMILY NAME -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    style="@style/classroom_individual_textview_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ:"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_Ho"
                    style="@style/classroom_individual_textview_style"
                    android:inputType="text"
                    android:text="Le"
                    android:textSize="22dp"
                   />
            </LinearLayout>

            <!-- FIRST NAME -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="100dp"
                android:paddingEnd="50dp">

                <TextView
                    style="@style/classroom_individual_textview_style"
                    android:text="Tên:"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_ten"
                    style="@style/classroom_individual_textview_style"
                    android:text="Giau"
                    android:textSize="22dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tuổi:"

                android:textColor="@color/mainText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_Tuoi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SDT2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="Số điện thoại:"
                android:textColor="@color/mainText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:textSize="22dp"/>
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/individualButtonUpdate"
                    style="@style/button_style"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background_1"
                    android:gravity="center"
                    android:text="Xác Nhận Chỉnh Sửa" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ButtonDeleteSinhVien"
                style="@style/button_style"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background_4"
                android:gravity="center"
                android:text="Xóa Sinh Viên" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ButtonGoBack_DSSV"
                android:layout_marginTop="20dp"
                style="@style/button_style"
                android:background="@drawable/button_background_3"
                android:gravity="center"
                android:text="Quay Lại" />

        </LinearLayout>
        <!-- end BUTTONS -->
    </LinearLayout>




</LinearLayout>